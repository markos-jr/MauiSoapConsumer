<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSoapConsumer.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            
            <Entry x:Name="Number1" Placeholder="Digite um número"/>
            <Entry x:Name="Number2" Placeholder="Digite um número"/>

            <HorizontalStackLayout  Spacing="10"/>
            
            <Button Text="Somar" Clicked="Somar"/>
            <Button Text="Subtrair" Clicked="Subtrair"/>
            <Button Text="Dividir" Clicked="Dividir"/>
            <Button Text="Multiplicar" Clicked="Multiplicar"/>

            <Label Text="Resultado"/>
            <Label Text="0" x:Name="LblResult"/>
            

            <HorizontalStackLayout/>
                
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
